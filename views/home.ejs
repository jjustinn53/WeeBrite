<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <title>Home</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Boldonse&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <style>
        body {
            justify-content: center;  /* centers horizontally */
            align-items: center;
        }

        h1 {
        margin-bottom: 1rem;
        }

        #animeImage {
        max-width: 90vw;
        max-height: 70vh;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.6);
        margin-bottom: 1rem;
        display: none; /* hidden until loaded */
        margin-left: auto;
        margin-right: auto;
        max-width: 90%;
        border-radius: 12px;
        }

        #error {
        color: #fca5a5;
        margin-bottom: 1rem;
        display: none;
        }

        #newImage {
        padding: 0.6rem 1.2rem;
        border-radius: 999px;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        background: #2563eb;
        color: white;
        }

        #newImage:disabled {
        opacity: 0.6;
        cursor: wait;
        }
  </style>
  <%- include('partials/header.ejs') %>
</head>

<body class="text-center">
    
    
        <p id="error"></p>
    <img id="animeImage" src="" alt="Random anime image" />

    <button id="newImage">Get another image</button>

    <script>
        const imgEl = document.getElementById('animeImage');
        const errorEl = document.getElementById('error');
        const buttonEl = document.getElementById('newImage');

        async function loadRandomAnime() {
        try {
            buttonEl.disabled = true;
            errorEl.style.display = 'none';

            const res = await fetch('/api/random-anime');
            if (!res.ok) {
            throw new Error('Network response was not ok');
            }

            const data = await res.json();
            if (!data.imageUrl) {
            throw new Error('No image URL returned');
            }

            imgEl.src = data.imageUrl;
            imgEl.style.display = 'block';
        } catch (err) {
            console.error(err);
            errorEl.textContent = 'Could not load anime image. Try again.';
            errorEl.style.display = 'block';
        } finally {
            buttonEl.disabled = false;
        }
        }

        document.addEventListener('DOMContentLoaded', loadRandomAnime);
        buttonEl.addEventListener('click', loadRandomAnime);
    </script>
    
    <%- include('partials/footer.ejs') %>

</body>
</html>